<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="10dp"
        android:height="10dp"
        android:left="12dp"
        android:top="25dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="55%"
            android:pivotY="40%">
            <shape>
                <solid android:color="@android:color/holo_purple" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="@dimen/marker_width"
        android:height="@dimen/marker_height"
        android:bottom="8dp">
        <shape>
            <solid android:color="@android:color/holo_purple" />
            <corners
                android:topLeftRadius="@dimen/marker_corner_radius"
                android:topRightRadius="@dimen/marker_corner_radius"
                android:bottomLeftRadius="@dimen/marker_corner_radius"
                android:bottomRightRadius="@dimen/marker_corner_radius"/>
        </shape>
    </item>


</layer-list>